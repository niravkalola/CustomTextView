<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <classinsp.nkdroid.com.customtextview.RobotoItalicTextView
        android:textSize="14sp"
        android:padding="8dp"
        android:text="ROBOTO ITALIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <classinsp.nkdroid.com.customtextview.RobotoLightItalicTextView
        android:textSize="14sp"
        android:padding="8dp"
        android:text="ROBOTO LIGHT ITALIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <classinsp.nkdroid.com.customtextview.RobotoLightItalicEditTextView
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:hint="ROBOTO LIGHT ITALIC"
        android:layout_height="wrap_content" />

    <classinsp.nkdroid.com.customtextview.RobotoLightItalicButton
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:hint="ROBOTO LIGHT ITALIC"
        android:layout_height="wrap_content" />

    <classinsp.nkdroid.com.customtextview.RobotoLightItalicCheckBox
        android:padding="8dp"
        android:textSize="18sp"
        android:checked="true"
        android:layout_width="wrap_content"
        android:hint="ROBOTO LIGHT ITALIC"
        android:layout_height="wrap_content" />

</LinearLayout>
